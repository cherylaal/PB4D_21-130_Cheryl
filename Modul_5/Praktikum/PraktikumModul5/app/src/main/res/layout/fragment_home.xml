<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:src="@drawable/banner"
        android:id="@+id/banner"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner"
        android:text="My communities"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner"
        android:src="@drawable/ic_add"
        android:id="@+id/add"
        android:padding="15dp"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/add"
        android:id="@+id/community"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/enha"
                android:id="@+id/enha"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enha"
                android:text="ENHYPEN"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingVertical="8dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/txt"
                android:id="@+id/txt"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt"
                android:text="TOMORROW X\n  TOGETHER"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingVertical="8dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/bts"
                android:id="@+id/bts"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bts"
                android:text="BTS"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingVertical="8dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/community"
        android:text="On LIVE"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        android:id="@+id/live"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/live"
        android:src="@drawable/live"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>